<form action="/editUser/<%=user._id%>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="fullname">Full Name</label>
      <input type="text" class="form-control" id="fullname" name="fullname" value=" <%=user.fullname%> " placeholder="Full Name" readonly required>
    </div>

    
    <div class="col">
      <label for="text">Country</label>
      <input type="text" class="form-control" id="country" name="country" value=" <%=user.country%> " placeholder="country" readonly required>
    </div>
    <div class="row form-group mb-4">
    <div class="col">
      <label for="text">Gender</label>
      <input type="text" class="form-control" id="gender" name="gender" value=" <%=user.gender%> " placeholder="Gender" readonly required>
    </div>
    
    <div class="col">
      <label for="balance">Deposit</label>
      <input type="text" class="form-control" id="balance" name="balance" value=" <%=user.balance%> " placeholder="balance" required>
    </div>

  </div>

  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="withdrawBalance">Widthdraw </label>
      <input type="text" class="form-control" id="widthdrawBalance" name="widthdrawBalance" value=" <%=user.widthdrawBalance%> " placeholder="balance" required>
    </div>

    <div class="col">
      <label for="bonus">Bonus </label>
      <input type="text" class="form-control" id="bonus" name="bonus" value=" <%=user.balance%>" placeholder="balance" required>
    </div>

  </div>
    
  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Telephone</label>
      <input type="tel" class="form-control" id="tel" name="tel" value=" <%=user.tel%> " placeholder="Telephone" readonly required>
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="<%=user.email%>" placeholder="Email" readonly required>
    </div>
  </div>

  <div class="row form-group mb-4">

  <div class="col">
    <label for="available">Available Balance </label>
    <input type="text" class="form-control" id="available" name="available" value=" <%=user.available%> " placeholder="Available balance" required>
  </div>

  <div class="col">
    <label for="session">Trade sessions </label>
    <input type="text" class="form-control" id="session" name="session" value=" <%=user.session%> " placeholder="0/0" required>
  </div>

</div>

<div class="row form-group mb-4">
  <div class="col">
    <label for="profit">Profit</label>
    <input type="text" class="form-control" id="profit" name="profit" value=" <%=user.profit%> " placeholder="Profile" required>
  </div>

  <div class="col">
    <label for="totalDeposit">Total Deposit</label>
    <input type="text" class="form-control" id="totalDeposit" name="totalDeposit" value=" <%=user.totalDeposit%> " placeholder="Total Deposit" required>
  </div>
</div>

<div class="row form-group mb-4">
  <div class="col">
    <label for="verifiedStatus">Verification status</label>
    <input type="text" class="form-control" id="verifiedStatus" name="verifiedStatus" value=" <%=user.verifiedStatus%> " placeholder="Verification status" required>
  </div>
</div>

<div class="row form-group mb-4">
  <div class="col">
    <label for="totalWidthdraw">Total Widthdraw</label>
    <input type="text" class="form-control" id="totalWidthdraw" name="totalWidthdraw" value="<%=user.totalWidthdraw%>" placeholder="Total widthdraw" required>
