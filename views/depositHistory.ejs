<div class="col-md-12 col-lg-12 col-sm-12">
  <div class="box">
      <div class="box-header with-border">
          <h4 class="box-title">Deposits</h4>
      </div>
<div class="box-body">
          <div class="table-responsive-md">
            <%if(user.deposits != ''){%>
<table class="table mb-0">
<thead>
<tr>
<th scope="col">#</th>
<th scope="col">Payment Method</th>
<th scope="col">Amount</th>
<th scope="col">Status</th>
<th scope="col">Date</th>
</tr>
</thead>
<tbody>
</tbody>
<tfoot>
       <% if(user.deposits.length > 0 ){ %>
        <%  user.deposits.forEach((element, index) => {  %>
                  <tr>
                    <th scope="col"><%=index%></th>
                    <th scope="col"><%=element.type%></th>
                    <th scope="col"><%=element.amount%></th>
                    <th scope="col"><%=element.status%></th>
                    <th scope="col"><%=element.createdAt%></th>
                  </tr>
                  <%  }) %>
                  <%  } %>
                </tfoot>
</table>
</div>
<% }else{%>
  <h3 class="text-center text-secondary mt-5">No Deposits found!</h3>
  <% } %>
